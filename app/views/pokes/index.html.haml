-provide(:title, 'Pokemon Index')
%p#notice= notice
%h1 Pokes
%table{'data-toggle': 'table'}
  %thead
    %tr
      %th Name
      %th Weight
      %th Order
      %th{:colspan => "3"}
  %tbody
    - @pokes.each do |poke|
      %tr
        %td= poke.name
        %td= poke.weight
        %td= poke.order
        %td= link_to 'Show', poke
        %td= link_to 'Edit', edit_poke_path(poke)
        %td= link_to 'Destroy', poke, method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New Poke', new_poke_path
