<p id="notice"><%= notice %></p>

<h1>Pokes</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokes.each do |poke| %>
      <tr>
        <td><%= poke.name %></td>
        <td><%= poke.weight %></td>
        <td><%= poke.order %></td>
        <td><%= link_to 'Show', poke %></td>
        <td><%= link_to 'Edit', edit_poke_path(poke) %></td>
        <td><%= link_to 'Destroy', poke, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

